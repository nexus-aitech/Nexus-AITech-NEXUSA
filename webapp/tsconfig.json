{
  "compilerOptions": {
    /* ========== Core Settings ========== */
    "target": "ES2022",                      
    "lib": ["dom", "dom.iterable", "esnext"], 
    "module": "esnext",                      
    "moduleResolution": "bundler",           
    "jsx": "preserve",                       
    "resolveJsonModule": true,               
    "isolatedModules": true,                 
    "noEmit": true,                          

    /* ========== Strictness ========== */
    "strict": true,                          
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                    

    /* ========== Type Checking ========== */
    "esModuleInterop": true,                 
    "allowJs": false,                        
    "incremental": true,                     

    /* ========== Paths / Aliases ========== */
    "baseUrl": ".",                          
    "paths": {
      "@/*": ["./src/*"]
    },

    /* ========== Next.js Plugin ========== */
    "plugins": [{ "name": "next" }]
  },

  /* ========== Includes / Excludes ========== */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo",
    ".next"
  ]
}
